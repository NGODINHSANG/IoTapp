<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutBottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/h2n1s_air"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H2N1S Air"
            android:textColor="#0939B4"
            android:textSize="16pt"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="184dp"
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="29dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_sub_list"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:text="Subscribe list"
            android:elevation="3dp"
            android:background="@drawable/buttons"
            android:textColor="#ffffff"
            android:textColorHint="#877B7B"
            android:textSize="8pt"
            android:textStyle="bold"
            android:onClick="subscribedListClick"/>

        <Button
            android:id="@+id/button_sub_more"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:text="Subscribe more"
            android:elevation="3dp"
            android:background="@drawable/buttons"
            android:textColor="#ffffff"
            android:textColorHint="#877B7B"
            android:textSize="8pt"
            android:textStyle="bold"
            android:onClick="subscribeMoreClick"/>

        <Button
            android:id="@+id/historic_warning"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"
            android:text="Historic Warning"
            android:elevation="3dp"
            android:background="@drawable/buttons"
            android:textColor="#ffffff"
            android:textColorHint="#877B7B"
            android:textSize="8pt"
            android:textStyle="bold"
            android:onClick="historicWarningClick"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

